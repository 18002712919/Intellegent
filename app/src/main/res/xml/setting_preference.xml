<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="语音播报">
        <SwitchPreference
            android:defaultValue="true"
            android:title="语音播报" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="开启震动"
            android:summary="当有新消息通知时震动提示"
            android:title="开启震动" />
    </PreferenceCategory>

    <PreferenceCategory android:title="帮助">
        <PreferenceScreen
            android:summary="反馈建议">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.xfyun.cn/" />
        </PreferenceScreen>
        <PreferenceScreen
            android:summary="关于">
            <intent

                android:targetClass="com.asus.intellegent.ui.activity.AboutActivity"
                android:targetPackage="com.asus.intellegent.ui.activity" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>

