<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#615362" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_help"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/icon_help" />

        <com.library.widget.RippleLayout xmlns:ripple="http://schemas.android.com/apk/ripplelayout"
            android:id="@+id/ripple_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ripple:color="#8899CC"
            ripple:duration="3000"
            ripple:radius="32dp"
            ripple:rippleNums="1"
            ripple:scale="4">

            <ImageView
                android:id="@+id/icon_voice_normal"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/voice" />
        </com.library.widget.RippleLayout>

        <ImageView
            android:id="@+id/icon_translation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:background="@color/transparent"
            android:src="@drawable/icon_translation" />
    </LinearLayout>
</LinearLayout>